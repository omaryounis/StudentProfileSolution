
@{
                /**/

                ViewBag.Title = "AddViolation";
                Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}


<script src="~/Scripts/Housing/AddViolationService.js"></script>
<script src="~/Scripts/Housing/AddViolationController.js"></script>


<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class="no-margin">رصد مخالفة</h4>
                </div>
                <div class="panel-body">
                    <div  ng-controller="AddViolationCtrl">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12">
                            <!--Send Request-->
                            <div id="SendRequest">
                                <form id="form" class="row">



                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 label-control text-right">اسم الطالب</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div id="Students" dx-select-box="StudentsSelectBox">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 label-control text-right">اقسام المخالفات</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div id="Students" dx-select-box="IssuesCategoriesSelectBox"
                                                 dx-validator="validationRequired">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 label-control text-right">انواع المخالفات</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div id="Students" dx-select-box="IssuesSelectBox"
                                                 dx-validator="validationRequired">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 label-control text-right">وقت و تاريخ المخالفة </label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div style="width: 100%" dx-date-box="violationDateDatePicker"></div>
                                        </div>
                                    </div>

                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div>
                                                <br />
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <label class="col-lg-12 col-sm-12 col-xs-12 form-control text-right" style="margin-top: 5px;border-radius: 3px;line-height: 28px;height: 37px;border-color: #ddd;" dir="rtl">رقم المخالفة : {{violationNumber}} </label>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 label-control text-right">تفاصيل المخالفة</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div dx-text-area="violationDescriptionTextArea"></div>
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 form-group">

                                        <div id="fileuploader">
                                            <div class="widget-container">
                                                <div dx-file-uploader="options" name="options">
                                                </div>
                                                <div class="content">
                                                    <div ng-if="value.length > 0">
                                                        <h4>Selected Files</h4>
                                                    </div>
                                                    @*<div ng-repeat="val in fileValues">
                                                            <div class="selected-item">
                                                                Name:
                                                                <span>{{val.name}}</span><br />
                                                                Size:
                                                                <span>{{val.size}}</span>bytes<br />
                                                                Type:
                                                                <span>{{val.type}}</span><br />
                                                                Last Modified Date:
                                                                <span>{{val.lastModifiedDate}}</span>
                                                            </div>
                                                        </div>*@
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group" style="margin-top: 15px;">
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div id="btnSave" class="btn btn-success" dx-button="btnSave"></div>
                                        </div>
                                    </div>





                                </form>
                            </div>
                            <div class="clearfix"></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .widget-container {
        margin-right: 0;
    }
</style>