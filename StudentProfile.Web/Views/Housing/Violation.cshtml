@{
    ViewBag.Title = "Violation";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}
<script src="~/Scripts/Housing/ViolationController.js"></script>
<script src="~/Scripts/Housing/ViolationService.js"></script>

<div class="container-fluid container-fullw text-right">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class="no-margin">صلاحيات اقسام المخالفات</h4>
                </div>
                <div class="panel-body" ng-controller="ViolationCtrl">

                    <div id="form">
                        <div class="form-group col-md-4 col-sm-12 col-xs-12">
                            <label class="control-label col-md-12 col-sm-12 col-xs-12">
                                اسم المستخدم
                            </label>
                            <div class="col-md-12 col-sm-12 col-xs-12" dx-select-box="UserSelectBox">
                            </div>
                        </div>
                        <div class="form-group col-md-4 col-sm-12 col-xs-12">

                        </div>

                        <div class="form-group col-md-4 col-sm-12 col-xs-12">
                            <label class="control-label col-md-12 col-sm-12 col-xs-12">
                                اختيار صلاحيات المخالفات
                            </label>
                            <div class="clearfix"></div>
                            <div dx-list="categoriesOptions"></div>
                        </div>
                        <br />
                        <div class="form-group col-md-12 col-sm-12 col-xs-12 text-left">
                            <div dx-button="saveButton"></div>
                        </div>
                        <hr />
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="dx-tree-st" dx-data-grid="PermissionsForUserDataGrid"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

