@{
    ViewBag.Title = "المجموعات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";

}


<script src="~/Scripts/Security/Groups.js"></script>


<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class=" no-margin">المجموعات</h4>
                </div>
                <div class="panel-body">
                    <div ng-controller="GroupsCtrl">
                        <form id="form" ng-submit="onFormSubmit($event)">
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">اسم المجموعة</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-text-box="Group.GroupName" dx-validator="GroupNameValidationRules"></div>
                                </div>
                            </div>

                            <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                <div dx-check-box="Group.IsAdminGroup"></div>
                            </div>
                            <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                <div dx-check-box="Group.IsActive"></div>
                            </div>
                            @if (ViewBag.Create != null)
                            {
                                if (ViewBag.Create)
                                {
                                    <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                        <div dx-button="SaveButton" ng-show="SaveButtonShow" ng-init="SaveButtonShow=true"></div>
                                    </div>
                                }
                            }
                            @if (ViewBag.Update != null)
                            {
                                if (ViewBag.Update)
                                {
                                    <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                        <div dx-button="UpdateButton" ng-show="UpdateButtonShow"></div>
                                    </div>
                                }
                            }
                        </form>

                        <div class="clearfix"></div>
                        <br/>
                        <div class="clearfix"></div>
                        <fieldset>
                             
                            <div id="gridContainer" class="dx-tree-st" dx-data-grid="dataGridOptions"></div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>