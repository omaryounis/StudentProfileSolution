@{
    ViewBag.Title = "مجموعة المستخدم";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}
<script src="~/Scripts/Security/UserGroup.js"></script>
<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel bg-white" style="min-height: 70vh">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class=" no-margin">مجموعة المستخدم</h4>
                </div>
                <div class="panel-body ">
                    <div ng-controller="UserGroupCtrl">
                        <form id="form" ng-submit="onFormSubmit($event)">
                            <div class="form-group col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">اسم المجموعة</label>
                                <div class="col-sm-8 col-md-8 col-sm-12 col-xs-12">
                                    <div dx-select-box="UserGroup.Groups" dx-validator="GroupValidationRules"></div>
                                </div>
                            </div>
                            <div class="form-group col-lg-5 col-md-5 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">اسم المستخدم</label>
                                <div class="col-sm-8 col-md-8 col-sm-12 col-xs-12">
                                    <div dx-select-box="UserGroup.Users" dx-validator="UserValidationRules"></div>
                                </div>
                            </div>
                            @if (ViewBag.create != null)
                            {
                                if (ViewBag.create)
                                {
                                    <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12" style="display: none;">
                                        <button dx-button="SaveButton"></button>
                                    </div>
                                    <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                        <button class="btn btn-success" ng-click="SaveUserToGroup()">حفظ</button>
                                    </div>
                                }
                            }
                        </form>
                        <div class="clearfix"></div>
                        <br/>
                        <div class="clearfix"></div>
                        @if (ViewBag.Read != null)
                        {
                            if (ViewBag.Read)
                            {
                                <fieldset ng-show="GroupId != null">
                                    <legend>قائمة بمستخدمي المجموعة المختارة</legend>
                                    <div id="gridContainer" class="dx-tree-st" dx-data-grid="dataGridOptions"></div>
                                </fieldset>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>