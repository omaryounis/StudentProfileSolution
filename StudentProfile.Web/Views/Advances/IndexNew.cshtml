@{
    ViewBag.Title = "إضافة طلب سلفة";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}

<script type="text/javascript" src="~/Scripts/Advances/IndexNew.js"></script>

<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class=" no-margin">إضافة طلب سلفة</h4>
                </div>
                <div class="panel-body">
                    <div ng-controller="AdvancesCtrl">
                        <fieldset>
                            <form ng-submit="onFormSubmit($event)">
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="AdvancesFilter.Nationality"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="AdvancesFilter.Degree"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="AdvancesFilter.Level"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12" dx-number-box="AdvancesFilter.StudentId"></div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12" dx-number-box="AdvancesFilter.NationalId"></div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div dx-button="AdvancesFilter.SearchButtonOptions" class="btn-sm"></div>
                                </div>
                            </form>
                            <div class="clearfix"></div>
                        </fieldset>
                        <div dx-popup="Popup.Options">
                            <div data-options="dxTemplate: { name:'info' }">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label class="control-label">نوع السلفة</label>
                                            <div class="col-lg-10 col-sm-10 col-md-10 col-xs-10">
                                                <div style="width: 100%" dx-select-box="Advance.AdvanceType" dx-validator="Advance.ValidationRules.AdvanceType"></div>
                                            </div>
                                            <div class="col-lg-2 col-sm-2 col-md-2 col-xs-2">
                                                <a title="اضافة انواع سلف" class="btn btn-sm btn-success " ng-click="AddNewAdvanceType()">
                                                    <i class="fa fa-plus"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label">المبلغ</label>
                                            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                                                <div class="row">
                                                    <div dx-select-box="Advance.AdvanceValue" dx-validator="Advance.ValidationRules.AdvanceValue"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label">تاريخ الطلب</label>
                                            <div layout-gt-xs="row">
                                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-date-box="Advance.AdvanceDate" dx-validator="Advance.ValidationRules.AdvanceDate">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label class="control-label">شهر بداية الخصم</label>
                                            <div layout-gt-xs="row">
                                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-date-box="Advance.AdvanceDueDate" dx-validator="Advance.ValidationRules.AdvanceDueDate">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 modal-footer text-left">
                                    <div dx-button="Popup.SaveButton"></div>
                                    <div dx-button="Popup.UpdateButton"></div>
                                </div>
                            </div>
                        </div>
                        <div dx-popup="AddNewAdvanceTypePopup.Options">
                            <div data-options="dxTemplate: { name:'AddNewAdvanceTypePopup' }">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group col-md-6">
                                        <label class="control-label">اسم نوع السلفة</label>
                                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-text-box="AddNewAdvanceTypePopup.AdvanceTypeName" dx-validator="AddNewAdvanceTypePopup.ValidationRules.AdvanceTypeName"></div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="control-label">حساب التهيئة</label>
                                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewAdvanceTypePopup.COAID" dx-validator="AddNewAdvanceTypePopup.ValidationRules.COAID"></div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 modal-footer text-left">
                                    <div dx-button="AddNewAdvanceTypePopup.SaveButton"></div>
                                </div>
                            </div>
                        </div>
                        <span>@ViewBag.Read</span>
                        <div id="gridContainer" dx-data-grid="dataGridOptions"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>