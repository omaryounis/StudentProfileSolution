@{
    ViewBag.Title = "تهيئة السلف والإعانات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}
<script src="~/Scripts/Advances/StudentAdvanceConfig.js"></script>
@*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@

<style>

    .dx-popup-title.dx-toolbar .dx-toolbar-label {
        font-size: 22px !important;
    }

    .dx-popup-title.dx-toolbar {
        padding: 12px 20px !important;
    }

    .dx-popup-title .dx-closebutton .dx-icon {
        color: #0e70a0 !important;
    }

    .swal-text {
        text-align: center;
    }

    .dx-popup-title {
        border-bottom: 1px solid #0e70a052 !important;
        background: #ffffff !important;
        color: #0e70a0 !important;
    }

    td.dx-command-edit {
        text-align: center !important
    }
</style>

<div class="container-fluid container-fullw" ng-controller="AdvanceConfigCtrl">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class="no-margin">تهيئة السلف والإعانات</h4>
                </div>
                <div class="panel-body">
                    <fieldset>
                        <div class="dx-tree-st dx-tree-st22" dx-data-grid="AdvanceConfigGrid"></div>
                    </fieldset>
                    <div dx-popup="AddNewRewardItemPopup.Options">
                        <div data-options="dxTemplate: { name:'AddNewRewardItemPopup' }">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group col-md-12">
                                    <label class="control-label">اسم االبند</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-text-box="AddNewRewardItemPopup.RewardItemName" dx-validator="AddNewRewardItemPopup.ValidationRules.RewardItemName"></div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label">الطرف المدين</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewRewardItemPopup.RewardItemCOAID" dx-validator="AddNewRewardItemPopup.ValidationRules.RewardItemCOAID"></div>
                                </div>
                                <div class="form-group col-md-12">
                                    <label class="control-label">الطرف الدائن</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewRewardItemPopup.RewardItemRecieveFromPayroll_COAID" dx-validator="AddNewRewardItemPopup.ValidationRules.RewardItemRecieveFromPayroll_COAID"></div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 modal-footer text-left">
                                <div dx-button="AddNewRewardItemPopup.SaveButton"></div>
                            </div>
                        </div>
                    </div>
                    @* إضافة السلف *@
                    <div dx-popup="AddNewAdvanceTypePopup.Options">
                        <div data-options="dxTemplate: { name:'AddNewAdvanceTypePopup' }">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group col-md-6">
                                    <label class="control-label">اسم السلفة</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-text-box="AddNewAdvanceTypePopup.AdvanceTypeName" dx-validator="AddNewAdvanceTypePopup.ValidationRules.AdvanceTypeName"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">حساب صرف السلفة</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewAdvanceTypePopup.AdvanceCOAID" dx-validator="AddNewAdvanceTypePopup.ValidationRules.AdvanceCOAID"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">حساب التحصيل من مسير المكافأت</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewAdvanceTypePopup.RecieveFromPayroll_COAID" dx-validator="AddNewAdvanceTypePopup.ValidationRules.RecieveFromPayroll_COAID"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">قيمة الخصم الشهري</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-number-box="AddNewAdvanceTypePopup.AdvanceValue" dx-validator="AddNewAdvanceTypePopup.ValidationRules.AdvanceValue"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">نوع القيمة</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewAdvanceTypePopup.AdvanceValueType" dx-validator="AddNewAdvanceTypePopup.ValidationRules.AdvanceValueType"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">الحد الأعلي لطلب السلفة</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-number-box="AddNewAdvanceTypePopup.MaxRequestValue" dx-validator="AddNewAdvanceTypePopup.ValidationRules.MaxRequestValue"></div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-12 col-sm-12 col-xs-12 text-right control-label">
                                        <div dx-check-box="AddNewAdvanceTypePopup.IsStudentVisible"></div>
                                        يظهر لدي الطالب
                                    </div>
                                </div>
                                <div class="form-group col-md-12">
                                    <div class="col-md-12 col-sm-12 col-xs-12 text-right control-label">
                                        <div dx-check-box="AddNewAdvanceTypePopup.IsConditional"></div>
                                        يخضع لشروط عدم استحقاق طلب سلفة جديدة
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 modal-footer text-left">
                                <div dx-button="AddNewAdvanceTypePopup.SaveButton"></div>
                            </div>
                        </div>
                    </div>

                    @* إضافة إعانة *@
                    <div dx-popup="AddNewSubsidyTypePopup.Options">
                        <div data-options="dxTemplate: { name:'AddNewSubsidyTypePopup' }">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group col-md-6">
                                    <label class="control-label">اسم الاعانة</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-text-box="AddNewSubsidyTypePopup.SubsidyTypeName" dx-validator="AddNewSubsidyTypePopup.ValidationRules.SubsidyTypeName"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">حساب التهيئة</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewSubsidyTypePopup.SubsidyCOAID" dx-validator="AddNewSubsidyTypePopup.ValidationRules.SubsidyCOAID"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="control-label">الحد الأعلي لطلب الإعانة</label>
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-number-box="AddNewSubsidyTypePopup.MaxRequestValue" dx-validator="AddNewSubsidyTypePopup.ValidationRules.MaxRequestValue"></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 control-label" style="margin-bottom: 4px;"><br /></div>
                                    <div class="col-md-12 col-sm-12 col-xs-12 text-right control-label">
                                        <div dx-check-box="AddNewSubsidyTypePopup.IsStudentVisible"></div>
                                        يظهر لدي الطالب
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 modal-footer text-left">
                                <div dx-button="AddNewSubsidyTypePopup.SaveButton"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
