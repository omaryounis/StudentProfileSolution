@{
    ViewBag.Title = "حالة الطلبات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}
<script type="text/javascript" src="~/Scripts/Advances/RequestStauts.js"></script>
<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class=" no-margin">حالة الطلبات</h4>
                </div>
                <div class="panel-body">
                    <div ng-controller="RequestStautsCtrl">
                        <fieldset>
                            <form ng-submit="onFormSubmit($event)">
                                <div class="form-group col-lg-3 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="Search.RequestType"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-3 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="Search.ReuqestStatus"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-3 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-text-box="Search.StudentNumber"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-3 col-md-4 col-sm-12 col-xs-12">
                                    <div dx-button="Search.SearchButtonOptions" class="btn-sm pull-left"></div>
                                </div>
                            </form>
                            <div class="clearfix"></div>
                            <div dx-data-grid="dataGridOptions"></div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>