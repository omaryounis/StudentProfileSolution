<script>
    function FirstAcceptAdvance(id) {
        swal({
            title: 'تأكيد',
            text: "هل تريد قبول طلب السلفة؟!",
            type: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'نعم',
            cancelButtonText: 'لأ'
        }).then((result) => {
            if (result.value) {
                $.ajax({
                    url: '/Advances/FirstAccept',
                    data: { id: id },
                    success: function (data) {
                        if (data == -1) {
                            window.location.replace("/Login/Login");
                        }
                        if (data == 1) {
                            swal({
                                title: 'تأكيد',
                                text: "تمت الموافقة على طلب الإعانة بنجاح",
                                type: 'success',
                                showCancelButton: false,
                                okButtonColor: '#3085d6',

                                okButtonColor: 'حسنا',

                            });
                            SubsidiesData.PerformCallback();
                        }
                        else {
                            swal({
                                title: 'تنبيه',
                                text: "حدث خطأ أثناء الحفظ",
                                type: 'warning',
                                showCancelButton: false,
                                okButtonColor: '#d33',
                                okButtonColor: 'حسنا',
                            });
                        }
                    },
                    error: function (data) {
                        swal({
                            title: 'تنبيه',
                            text: "حدث خطأ أثناء الحفظ",
                            type: 'warning',
                            showCancelButton: false,
