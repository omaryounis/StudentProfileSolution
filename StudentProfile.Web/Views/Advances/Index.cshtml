@{
    ViewBag.Title = "السلف";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}
<script type="text/javascript" src="~/Scripts/Advances/Index.js"></script>
<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class=" no-margin">السلف</h4>
                </div>
                <div class="panel-body">
                    <div ng-controller="AdvancesCtrl">
                        <form id="form" ng-submit="onFormSubmit($event)">
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">بحث بواسطة</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-switch="Advance.SearchByStudentNumber"></div>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12" ng-if="SearchByStudentNumber">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">اسم الطالب</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-select-box="Advance.StudentName" dx-validator="Advance.ValidationRules.StudentName"></div>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12" ng-if="!SearchByStudentNumber">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">رقم الطالب</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-number-box="Advance.StudentNumber" dx-validator="Advance.ValidationRules.StudentName"></div>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">نوع السلفة</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-select-box="Advance.AdvanceType" dx-validator="Advance.ValidationRules.AdvanceType"></div>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">شهر بداية الخصم</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-date-box="Advance.AdvanceDueDate" dx-validator="Advance.ValidationRules.AdvanceDueDate"></div>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">المبلغ</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-number-box="Advance.AdvanceValue" dx-validator="Advance.ValidationRules.AdvanceValue"></div>
                                </div>
                            </div>
                            @*<div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">قيمة القسط</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-number-box="Advance.MonthlyPremium" dx-validator="Advance.ValidationRules.MonthlyPremium"></div>
                                </div>
                            </div>*@
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">تاريخ الطلب</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-date-box="Advance.AdvanceDate" dx-validator="Advance.ValidationRules.AdvanceDate"></div>
                                </div>
                            </div>
                            <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <div class="col-lg-12" dx-radio-group="Advance.AutoCalc" dx-validator="Advance.ValidationRules.AutoCalc"></div>
                            </div>
                            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div dx-form="Advance.AutoCalcFormOptions"></div>
                                <div dx-form="Advance.CustomCalcFormOptions"></div>
                            </div>
                            <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                <div dx-button="Advance.SaveButton" ng-show="SaveButtonShow" ng-init="SaveButtonShow=true"></div>
                            </div>
                            <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                <div dx-button="Advance.UpdateButton" ng-show="UpdateButtonShow"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>