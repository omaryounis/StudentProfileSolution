@{
    ViewBag.Title = "الاعانات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}
<script type="text/javascript" src="~/Scripts/Advances/Subsidies.js"></script>
<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class=" no-margin">الاعانات</h4>
                </div>
                <div class="panel-body">
                    <div ng-controller="SubsidiesCtrl">
                        <fieldset>
                            <form ng-submit="onFormSubmit($event)">
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="AdvancesFilter.Nationality"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="AdvancesFilter.Degree"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                                        <div dx-select-box="AdvancesFilter.Level"></div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12" dx-number-box="AdvancesFilter.StudentId"></div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div class="col-lg-12" dx-number-box="AdvancesFilter.NationalId"></div>
                                </div>
                                <div class="form-group col-lg-2 col-md-4 col-sm-12 col-xs-12">
                                    <div dx-button="AdvancesFilter.SearchButtonOptions" class="btn-sm"></div>
                                </div>
                            </form>
                            <div class="clearfix"></div>
                        </fieldset>
                        <div dx-popup="Popup.Options">
                            <div data-options="dxTemplate: { name:'info' }">
                                <form enctype="multipart/form-data">
                                    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="row">
                                            <div class="form-group col-md-6">
                                                <label class="control-label col-lg-12 col-sm-12 col-md-12 col-xs-12">نوع الاعانة</label>
                                                <div class="col-lg-10 col-sm-10 col-md-10 col-xs-10">
                                                    <div style="width: 100%" dx-select-box="Advance.AdvanceType" dx-validator="Advance.ValidationRules.AdvanceType"></div>
                                                </div>
                                                <div class="col-lg-2 col-sm-2 col-md-2 col-xs-2">
                                                    <a title="اضافة انواع اعانة" class="btn btn-sm btn-success " ng-click="AddNewSubsidyType()">
                                                        <i class="fa fa-plus"></i>
                                                    </a>
                                                </div>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label class="control-label col-lg-12 col-sm-12 col-md-12 col-xs-12">المبلغ</label>
                                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">

                                                    <div dx-text-box="Advance.AdvanceValue" dx-validator="Advance.ValidationRules.AdvanceValue"></div>

                                                </div>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label class="control-label col-lg-12 col-sm-12 col-md-12 col-xs-12">تاريخ الطلب</label>
                                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                                                    <div dx-date-box="Advance.AdvanceDate" dx-validator="Advance.ValidationRules.AdvanceDate"></div>
                                                </div>
                                            </div>
                                            <div class="form-group col-md-6">

                                                <label class="control-label col-lg-12 col-sm-12 col-md-12 col-xs-12">المرفقات</label>

                                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                                                    <div dx-file-uploader="Advance.Attachments">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 modal-footer text-left">
                                    <div dx-button="Popup.SaveButton" ng-show="!isUpdate"></div>
                                    <div dx-button="Popup.SaveButton" ng-show="isUpdate"></div>
                                </div>
                            </div>
                        </div>
                        <div dx-popup="AddNewSubsidyTypePopup.Options">
                            <div data-options="dxTemplate: { name:'AddNewSubsidyTypeTemplate' }">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group col-md-6">
                                        <label class="control-label">اسم نوع الاعانة</label>
                                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-text-box="AddNewSubsidyTypePopup.AdvanceTypeName" dx-validator="AddNewSubsidyTypePopup.ValidationRules.AdvanceTypeName"></div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label class="control-label">حساب التهيئة</label>
                                        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12" dx-select-box="AddNewSubsidyTypePopup.COAID" dx-validator="AddNewSubsidyTypePopup.ValidationRules.COAID"></div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 modal-footer text-left">
                                    <div dx-button="AddNewSubsidyTypePopup.SaveButton"></div>
                                </div>
                            </div>
                        </div>
                        <div id="gridContainer" dx-data-grid="dataGridOptions"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .dx-fileuploader-input-wrapper {
        padding: 0;
        border: 0;
    }

    .dx-fileuploader-wrapper { padding: 0; }
    .dx-popup-wrapper > .dx-overlay-content, .dx-popup-content {
        height: auto !important
    }
</style>