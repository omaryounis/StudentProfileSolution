@{
    ViewBag.Title = "إستلام الشيكات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}

<script src="~/Scripts/PayRollStudents/ReceiveChecksService.js"></script>
<script src="~/Scripts/PayRollStudents/ReceiveChecksController.js"></script>
<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class="no-margin">إستلام الشيكات</h4>
                </div>
                <div class="panel-body">
                    <div ng-controller="ReceiveChecksCtrl">
                        <div class="row">
                            <label class="col-lg-1 col-sm-12 col-xs-12 control-label">المسير</label>
                            <div class="col-lg-3 col-sm-12 col-xs-12 ">
                                <div id="Payroll" dx-select-box="PayrollSelectBox"
                                     dx-validator="validationRequired"></div>
                            </div>
                            <label class="col-lg-1 col-sm-12 col-xs-12 control-label text-right"> مناديب الصرف</label>
                            <div class="col-lg-3 col-sm-12 col-xs-12  ">
                                <div dx-select-box="UsersSelectBox" style="width:100%;height: 34px;"
                                     dx-validator="validationRequired"></div>
                            </div>
                            <div class="col-lg-2 col-sm-12 col-xs-12  ">
                                <div class="btn btn-primary" dx-button="btnSearch"> </div>
                            </div>
                        </div>


                      
                        <div class="form-group col-md-12 col-sm-12 col-xs-12">
                            <div class="dx-tree-st dx-tree-st22" dx-data-grid="gridCheckData()"></div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                            <br />
                            <div class="btn btn-success" dx-button="btnApprovedAll"> </div>
                        </div>


                        <div id="accept" class="popup" dx-popup="acceptPopup">
                            <div dx-scroll-view="{
                                                height: 40,
                                                direction: 'both'
                                            }">
                                <div class="clearfix"></div>

                                <div class="clearfix"></div>
                                <div class="form-group col-md-12 col-sm-12 col-xs-12 text-center">
                                    <div dx-button="acceptButton"></div>
                                    <div dx-button="btnUploadOptions"></div>
                                </div>

                            </div>
                        </div>



                        @* الجزء الخاص برفع المرفقات *@
                        <div dx-popup="acceptPopup.UploadFilePopupOptions">
                            <div data-options="dxTemplate: { name : 'UploadFileContent' }">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div dx-file-uploader="FileUploadingOptions">
                                            <span class="note">Allowed file extensions: <span>.Pdf</span>.</span>
                                        </div>
                                        <div>
                                            <div class="text-right" ng-if="MDL_UploadingFilesvalue.length > 0">
                                                <h4>الملفات المختارة</h4>
                                            </div>
                                            <div ng-repeat="val in MDL_UploadingFilesvalue">
                                                <div class="selected-item selected-item-ds text-right">
                                                    <ul class="list-unstyled" dir="rtl">
                                                        <li><span class="pull-right"> اسم الملف:</span> <span>{{val.name}}</span></li>
                                                        <li><span class="pull-right">حجم الملف:</span> <span>{{val.size}}</span> bytes</li>
                                                        <li><span class="pull-right">نوع الملف:</span>  <span>{{val.type}}</span></li>
                                                    </ul>
                                                    <a class="btn btn-danger" href="" ng-click="RemoveUploadingFile(val.$$hashKey)">
                                                        حذف الملف <i class="fa fa-trash-o"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .dx-popup-content .table-striped a.btn-info {
        color: #fff !important;
    }

    .dx-popup-content {
        overflow-y: scroll;
    }
</style>