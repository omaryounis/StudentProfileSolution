@{
    ViewBag.Title = "تهيئة قوائم المشاركات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}

<script src="~/Scripts/AcademicActivities/AcademicActivitiesService.js"></script>
<script src="~/Scripts/AcademicActivities/ActivityMenusConfigController.js"></script>

<style>
    .swal-text {
        text-align: center;
    }

    .dx-popup-title {
        border-bottom: 1px solid #0e70a052 !important;
        background: #ffffff !important;
        color: #0e70a0 !important;
    }

        .dx-popup-title.dx-toolbar .dx-toolbar-label {
            font-size: 22px !important;
        }

        .dx-popup-title.dx-toolbar {
            padding: 12px 20px !important;
        }

        .dx-popup-title .dx-closebutton .dx-icon {
            color: #0e70a0 !important;
        }

    td.dx-command-edit {
        text-align: center !important
    }

    .dx-tabs.dx-navbar {
        text-align: center;
        position: absolute;
        bottom: 0;
    }

    .listOptions-ds .dx-list-item-content {
        font-weight: normal;
        padding: 15px 10px 15px 10px;
        border-top: 0;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        transition: .5s;
    }


        .listOptions-ds .dx-list-item-content:hover {
            background: #0e70a0;
            color: #FFF;
        }


        .listOptions-ds .dx-list-item-content i {
            margin-left: 10px;
            transition: all 0.3s ease;
        }


        .listOptions-ds .dx-list-item-content:hover i {
            margin-left: 15px;
            color: #FFF;
        }

    td.dx-command-edit {
        text-align: center !important
    }
</style>

<div class="container-fluid container-fullw" ng-controller="ActivityMenusConfigCtrl">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right" style="margin:0">
                    <h4 class="no-margin">تهيئة قوائم المشاركات</h4>
                </div>

                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-3 col-sm-12 col-xs-12 listOptions-ds">
                            <div class="panel-body">
                                <div class="panel panel-default">
                                    <div class="panel-body" style="height:37vh;text-align: center;background-color: #2196f314">
                                        <div dx-list="MenuOptions"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-12 col-xs-12">
                            <div class="panel bg-white">
                                <div class="panel-body">

                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <div class="row">
                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right">اسم المشاركة</label>
                                                    <div class="col-lg-12 col-sm-12 col-xs-12">
                                                        <div class='col-lg-12 col-sm-12 col-xs-12' dx-select-box="AddActivityMaster.ActivityNames" dx-validator="AddActivityMaster.ValidationRules.Required"></div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-md-12 col-sm-12 col-xs-12 text-right control-label">رقم المشاركة</label>
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div dx-text-box="AddActivityMaster.ActivityNo"></div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right">نوع المشاركة</label>
                                                    <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                                        <div class='col-lg-12 col-sm-12 col-xs-12' dx-select-box="AddActivityMaster.ActivityTypes" dx-validator="AddActivityMaster.ValidationRules.Required"></div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right">مكان المشاركة</label>
                                                    <div class="col-lg-12 col-sm-12 col-xs-12">
                                                        <div class='col-lg-12 col-sm-12 col-xs-12' dx-select-box="AddActivityMaster.ActivityLocations" dx-validator="AddActivityMaster.ValidationRules.Required"></div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-md-12 col-sm-12 col-xs-12 text-right control-label">عدد الساعات</label>
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div dx-number-box="AddActivityMaster.HoursNo" dx-validator="AddActivityMaster.ValidationRules.Required"></div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-md-12 col-sm-12 col-xs-12 text-right control-label">تاريخ البداية</label>
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div style="width:100%" dx-date-box="AddActivityMaster.ActivityStartDate" dx-validator="AddActivityMaster.ValidationRules.Required"></div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-md-12 col-sm-12 col-xs-12 text-right control-label">تاريخ النهاية</label>
                                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                                        <div style="width:100%" dx-date-box="AddActivityMaster.ActivityEndDate" dx-validator="AddActivityMaster.ValidationRules.Required"></div>
                                                    </div>
                                                </div>

                                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3 form-group">
                                                    <label class="col-md-12 col-sm-12 col-xs-12 text-right control-label"><span><br /></span></label>
                                                    <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                                        <div dx-button="AddActivityMaster.SaveButton"></div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="dx-tree-st dx-tree-st22" dx-data-grid="AddActivityMaster.ActivityMasterGrid"></div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                @* الشاشة الخاصة بإضافة أسماء مشاركات *@
                <div dx-popup="AddActivityNamePopup.Options">

                    <div data-options="dxTemplate: { name : 'AddActivityNamePopupContent' }">
                        <div dx-scroll-view="{
                                     height: 601,
                                     direction: 'both'
                                 }">
                                 <div class="panel-body" style="background-color: #eee;">
                                    <div class="row">

                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-5 col-sm-5 col-xs-5 control-label text-right">اسم المشاركة</label>
                                            <div class="col-lg-7 col-sm-7 col-xs-7">
                                                <div class='col-lg-12 col-sm-12 col-xs-12' dx-text-box="AddActivityNamePopup.ActivityName" dx-validator="AddActivityNamePopup.ValidationRules.Required"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-3 col-sm-3 col-xs-3 control-label text-right">ملاحظات</label>
                                            <div class="col-lg-9 col-sm-9 col-xs-9">
                                                <div dx-text-box="AddActivityNamePopup.ActivityNameNotes"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 form-group">
                                            <div dx-button="AddActivityNamePopup.SaveButton"></div>
                                        </div>
                                    </div>
                                </div>
                             <div class="row">
                                <div class="col-md-12">
                                    <div class="dx-tree-st dx-tree-st22" dx-data-grid="AddActivityNamePopup.ActivityNamesGrid"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* الشاشة الخاصة بإضافة أنواع مشاركات جديدة *@
                <div dx-popup="AddActivityTypePopup.Options">
                    <div data-options="dxTemplate: { name : 'AddActivityTypePopupContent' }">
                        <div dx-scroll-view="{
                                     height: 601,
                                     direction: 'both'
                                 }">
                                 <div class="panel-body" style="background-color: #eee;">
                                    <div class="row">
                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-5 col-sm-5 col-xs-5 control-label text-right">نوع المشاركة</label>
                                            <div class="col-lg-7 col-sm-7 col-xs-7">
                                                <div class='col-lg-12 col-sm-12 col-xs-12' dx-text-box="AddActivityTypePopup.ActivityTypeName" dx-validator="AddActivityTypePopup.ValidationRules.Required"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-3 col-sm-3 col-xs-3 control-label text-right">ملاحظات</label>
                                            <div class="col-lg-9 col-sm-9 col-xs-9">
                                                <div dx-text-box="AddActivityTypePopup.ActivityTypeNotes"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 form-group">
                                            <div dx-button="AddActivityTypePopup.SaveButton"></div>
                                        </div>

                                    </div>
                                </div>
                             <div class="row">
                                <div class="col-md-12">
                                    <div class="dx-tree-st dx-tree-st22" dx-data-grid="AddActivityTypePopup.ActivityTypesGrid"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* الشاشة الخاصة بإضافة أماكن مشاركات جديدة *@
                <div dx-popup="AddActivityLocationPopup.Options">
                    <div data-options="dxTemplate: { name : 'AddActivityLocationPopupContent' }">
                        <div dx-scroll-view="{
                                     height: 601,
                                     direction: 'both'
                                 }">
                                 <div class="panel-body" style="background-color: #eee;">
                                    <div class="row">

                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-5 col-sm-5 col-xs-5 control-label text-right">>مكان المشاركة</label>
                                            <div class="col-lg-7 col-sm-7 col-xs-7">
                                                <div class='col-lg-12 col-sm-12 col-xs-12' dx-text-box="AddActivityLocationPopup.ActivityLocationName" dx-validator="AddActivityLocationPopup.ValidationRules.Required"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-3 col-sm-3 col-xs-3 control-label text-right">ملاحظات</label>
                                            <div class="col-lg-9 col-sm-9 col-xs-9">
                                                <div dx-text-box="AddActivityLocationPopup.ActivityLocationNotes"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 form-group">
                                            <div dx-button="AddActivityLocationPopup.SaveButton"></div>
                                        </div>
                                    </div>
                                </div>
 
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="dx-tree-st dx-tree-st22" dx-data-grid="AddActivityLocationPopup.ActivityLocationsGrid"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* الشاشة الخاصة بإضافة تقييمات جديدة *@
                <div dx-popup="AddActivityEvaluationPopup.Options">
                    <div data-options="dxTemplate: { name : 'AddActivityEvaluationPopupContent' }">
                        <div dx-scroll-view="{
                                     height: 601,
                                     direction: 'both'
                                 }">
                                 <div class="panel-body" style="background-color: #eee;">
                                    <div class="row">

                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-4 col-sm-4 col-xs-4 control-label text-right">التقييم</label>
                                            <div class="col-lg-8 col-sm-8 col-xs-8">
                                                <div class='col-lg-12 col-sm-12 col-xs-12' dx-text-box="AddActivityEvaluationPopup.ActivityEvaluationName" dx-validator="AddActivityEvaluationPopup.ValidationRules.Required"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 form-group">
                                            <label class="col-lg-4 col-sm-4 col-xs-4 control-label text-right">النسبة</label>
                                            <div class="col-lg-8 col-sm-8 col-xs-8">
                                                <div class='col-lg-12 col-sm-12 col-xs-12' dx-number-box="AddActivityEvaluationPopup.ActivityEvaluationPercent" dx-validator="AddActivityEvaluationPopup.ValidationRules.Required"></div>
                                            </div>
                                        </div>

                                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 form-group">
                                            <div dx-button="AddActivityEvaluationPopup.SaveButton"></div>
                                        </div>
                                    </div>
                                </div>
 
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="dx-tree-st dx-tree-st22" dx-data-grid="AddActivityEvaluationPopup.ActivityEvaluationsGrid"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
