
@{
    ViewBag.Title = "متابعة واعتماد قوائم المشاركات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}

<script src="~/Scripts/AcademicActivities/NewAcademicActivitiesService.js"></script>
<script src="~/Scripts/AcademicActivities/NewActivityDecisionTakingController.js"></script>
@*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@

<style>
    .swal-text {
        text-align: center;
    }

    .dx-button-success {
        background-color: #5cb85c;
        border-color: white;
        color: #fff;
    }

    .dx-button-danger {
        background-color: #d9534f;
        border-color: white;
        color: #fff;
    }

    .dx-tree-st td .dx-button-has-icon .dx-button-content {
        padding: 3px !important;
    }

    .master-detail-caption-st {
        padding-top: 0px;
        padding-bottom: 12px;
        text-align: center;
        font-size: medium;
        font-weight: 900;
    }

    .swal-text {
        text-align: center;
    }

    .dx-popup-title {
        border-bottom: 1px solid #0e70a052 !important;
        background: #ffffff !important;
        color: #0e70a0 !important;
    }

        .dx-popup-title.dx-toolbar .dx-toolbar-label {
            font-size: 22px !important;
        }

        .dx-popup-title.dx-toolbar {
            padding: 12px 20px !important;
        }

        .dx-popup-title .dx-closebutton .dx-icon {
            color: #0e70a0 !important;
        }

    td.dx-command-edit {
        text-align: center !important
    }
</style>

<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h2>متابعة واعتماد قوائم المشاركات</h2>
                </div>
                <div ng-controller="ActivityDecisionTakingCtrl">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div dx-data-grid="NewActivityRequestsGrid" class="dx-tree-st dx-tree-st22" dx-item-alias="ActivityRequestItem">
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                    <div dx-popup="_PopupOptions">
                        <div data-options="dxTemplate: { name : '_PopupContent' }">
                            <div class="panel bg-white">
                                <div class="panel-body">
                                    <div dx-data-grid="RequestsDetailsGrid" class="dx-tree-st dx-tree-st22">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>




                    <div id="_decisionPopupVisible" class="popup" dx-popup="decisionPopup">
                        <div dx-scroll-view="{
                                                height: 900,
                                                direction: 'both'
                                            }">
                            <div class="clearfix"></div>
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <div dx-text-area="recommendationsOfTextArea"></div>
                            </div>

                            <div class="clearfix"></div>
                            <div class="form-group col-md-12 col-sm-12 col-xs-12 text-center">
                                <div dx-button="acceptButton"></div>
                                <div dx-button="refuseButton"></div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



