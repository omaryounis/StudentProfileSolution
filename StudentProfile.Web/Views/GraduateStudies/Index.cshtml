@{
    ViewBag.Title = "قائمة طلاب الدراسات العليا";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}

<style>
    fieldset {
        border: none;
        margin: 2px 0;
        padding: 8px 0 5px 0;
        border: 1px solid #33333329;
        position: relative;
        border-radius: 5px;
        background: #e6e6e6;
    }

    .fieldset-dds {
        line-height: 20px;
    }
</style>

<script src="~/Scripts/GraduateStudies/GraduateStudiesService.js"></script>
<script src="~/Scripts/GraduateStudies/GraduateStudiesController.js"></script>

<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class="no-margin"> قائمة طلاب الدراسات العليا </h4>
                </div>
                

                <div class="panel-body">
                    <div id="CalculationBonusContent" ng-controller="GraduateStudiesCtrl">
                        <div class="col-lg-12 col-sm-12 col-xs-12 form-group text-right">
                            <div class="col-lg-12 col-sm-12 col-xs-12">
                                <div dx-button="btnUpdateStudentsData"></div>
                            </div>
                        </div>

                        <form id="form" class="row" ng-submit="ViewGraduateStudiesStudents($event)">
                            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 form-group">
                                <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right"> الكليات</label>
                                <div class="col-lg-12 col-sm-12 col-xs-12  ">
                                    <div dx-tag-box="FacultionSelectBox" style="width:100%;height: 34px;"
                                         dx-validator="validationRequired"></div>
                                </div>
                            </div>

                            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 form-group">
                                <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right"> الدرجات العلمية</label>
                                <div class="col-lg-12 col-sm-12 col-xs-12  ">
                                    <div dx-tag-box="DegreeSelectBox" style="width:100%;height: 34px;"
                                         dx-validator="validationRequired"></div>
                                </div>
                            </div>
                            @if (ViewBag.Read != null)
                            {
                                if (ViewBag.Read)
                                {
                                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 form-group text-right">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right"> <br / > </label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div id="btnView" class="btn btn-success" dx-button="btnView"> </div>
                                        </div>
                                    </div>
                                }
                            }

                        </form>

                        <div class="row">
                            <div class="col-lg-12 col-sm-12 col-xs-12" style="position:relative">
                                <div id="List" class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="dx-viewport dx-tree-st">
                                        <div class="demo-container">
                                            <div id="gridGraduateStudies" class="dx-tree-st dx-tree-st22" dx-data-grid="gridGraduateStudies"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="popup" dx-popup="PopupWarning ">
                            <div id="btnPrint" dx-button="btnPrint"> </div>
                            @*<div id="btnExportToExcel" dx-button="btnExportToExcel"> </div>*@
                            <br />
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 dx-tree-st">
                                <div id="DetailWarning">
                                    <table id="TableDetailWarning" class="table table-bordered table-ds">
                                        <tr>
                                            <th>السبب</th>
                                            <th>التاريخ</th>
                                            <th>ملاحظات</th>
                                        </tr>

                                        <tr ng-repeat="item in DetailWarningList">
                                            <td>{{item.REASON}}</td>
                                            <td>{{item.ENTRY_DATE}}</td>
                                            <td>{{item.NOTE}}</td>
                                        </tr>
                                    </table>
                                    <iframe id="Area" style="display:none"></iframe>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .dx-overlay-content.dx-popup-normal {
        height: auto !important;
    }


    .dx-fileuploader-input-wrapper {
        padding: 0;
        border: 0;
    }

    .dx-fileuploader-wrapper {
        padding: 0;
    }

    .dx-dropdownlist-popup-wrapper .dx-popup-content {
        height: 250px !important
    }
</style>

