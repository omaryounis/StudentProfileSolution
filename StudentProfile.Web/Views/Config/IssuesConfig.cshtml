@{
    ViewBag.Title = "تهيئة تصنيفات الملاحظات";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}
<script src="~/Scripts/Config/IssuesConfig.js"></script>
<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class=" no-margin">تهيئة تصنيفات الملاحظات</h4>
                </div>
                <div class="panel-body">
                    <div ng-controller="IssuesConfigCtrl">
                        <form id="form" ng-submit="onFormSubmit($event)">
                            <div class="form-group col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <label class="col-lg-4 col-md-4 col-sm-12 col-xs-12 control-label">اسم التصنيف</label>
                                <div class="col-md-8 col-sm-12 col-xs-12 ">
                                    <div class="col-lg-12" dx-text-box="Issue.IssueDescription" dx-validator="ValidationRules.IssueDescription"></div>
                                </div>
                            </div>
                            @if (ViewBag.Create != null)
                            {
                                if (ViewBag.Create)
                                {
                                    <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                        <div dx-button="Buttons.SaveButtonOptions"></div>
                                    </div>
                                }
                            }
                            @if (ViewBag.Update != null)
                            {
                                if (ViewBag.Update)
                                {
                                    <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                        <div dx-button="Buttons.UpdateButtonOptions"></div>
                                    </div>
                                    <div class="form-group col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                        <div dx-button="Buttons.CancelButtonOptions"></div>
                                    </div>
                                }
                            }
                        </form>
                        <div class="clearfix"></div>
                        <br/>
                        <div class="clearfix"></div>
                        <fieldset>
                            <div dx-data-grid="dataGridOptions"></div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>