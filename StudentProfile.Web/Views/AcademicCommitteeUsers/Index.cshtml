@{
    ViewBag.Title = "صلاحيات اللجنة الاكاديمية";
    Layout = "~/Views/Shared/_DevextremeLayout.cshtml";
}

<script src="~/Scripts/AcademicCommitteeUsers/AcademicCommitteeUsersService.js"></script>
<script src="~/Scripts/AcademicCommitteeUsers/AcademicCommitteeUsersController.js"></script>

<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class="no-margin">صلاحيات اللجنة الاكاديمية</h4>
                </div>
                <div class="panel-body">
                    <div id="TravelOrderPhasesContent" ng-controller="AcademicCommitteeUsersCtrl">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-sx-12">
                            <!--Send Request-->
                            <div id="SendRequest" class="text-right">
                                <form id="form" class="row" ng-submit="SaveAcademicCommitteeUsers($event)">
                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 control-label">المسؤول</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12 ">
                                            <div id="Users" dx-select-box="UsersSelectBox"
                                                 dx-validator="validationRequired"></div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right"> الكليات</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12  ">
                                            <div dx-tag-box="FacultionSelectBox" style="width:100%;height: 34px;"
                                                 dx-validator="validationRequired"></div>
                                        </div>
                                    </div>

                                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right"> الدرجات العلمية</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12  ">
                                            <div dx-tag-box="DegreeSelectBox" style="width:100%;height: 34px;"
                                                 dx-validator="validationRequired"></div>
                                        </div>
                                    </div>
                                    @*<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                                        <label class="col-lg-12 col-sm-12 col-xs-12 control-label text-right"> مسؤول الصرافة</label>
                                        <div class="col-lg-12 col-sm-12 col-xs-12  ">
                                            <div dx-check-box="IsMoneyExchange"></div>
                                        </div>
                                    </div>*@
                                    <div class="clearfix"></div>

                                    @if (ViewBag.Create != null)
                                    {
                                        if (ViewBag.Create)
                                        {
                                            <div class="clearfix"></div>
                                            <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12 form-group text-left" style="float:left;">
                                                <label class="col-lg-12 col-sm-12 col-xs-12 control-label"><br /> </label>
                                                <div>
                                                    <div id="btnSave" class="btn btn-success" dx-button="btnSave"></div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </form>
                                <div class="clearfix"></div>
                                <div id="List">
                                    <div class="col-lg-12 col-sm-12 col-xs-12">
                                        <div class="table-responsive">
                                            <div class="dx-viewport dx-tree-st">
                                                <div class="demo-container">
                                                    <div id="gridAcademicCommitteeUsers" dx-data-grid="gridAcademicCommitteeUsers"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .widget-container {
        margin-right: 0;
    }

    .dx-fileuploader-input-wrapper {
        padding: 0;
        border: 0;
    }

    .dx-fileuploader-wrapper {
        padding: 0 7px;
    }

    .widget-container .content {
        margin-top: 0;
        margin-right: 10px;
    }
</style>