                {

                    i.ColumnCount = 2;
                    i.Caption = "ادخال رحلة توقف";
                    i.SettingsItemHelpTexts.Position = HelpTextPosition.Bottom;
                    i.SettingsItemCaptions.Location = LayoutItemCaptionLocation.Top;
                });
                groupItem.Items.Add(i =>
