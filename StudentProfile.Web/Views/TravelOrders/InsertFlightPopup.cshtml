                });
                groupItem.Items.Add(i =>
                {

                    i.Name = "TicketNumber";
                    i.FieldName = "TicketNumber";
                    i.Visible = lastLevel;
                    i.Caption = "رقم التذكرة";

                    i.NestedExtension().TextBox(s =>
                    {
                        s.Width = Unit.Percentage(100);
