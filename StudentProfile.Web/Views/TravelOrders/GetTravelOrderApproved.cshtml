<script type="text/javascript">

    function TravelStudentsDocumentViewerBeforeExportRequest(s, e) {
        debugger;
        e.customArgs["TripNumber"] = TripNumber.GetValue();
        e.customArgs["AgentRefNumber"] = AgentRefNumber.GetValue();
        e.customArgs["CreateDateFrom"] = CreateDateFrom.GetValue();
        e.customArgs["CreateDateTo"] = CreateDateTo.GetValue();
    }


</script>
<script>
    function SetLevel(s, e) {
        debugger;
        if (e.customArgs["level"] == undefined) {
            var lvl = $('#LevelCount').val();
            e.customArgs["level"] = lvl;
        }
    }
</script>
<div class="container-fluid container-fullw">
    <div class="row">
        <div class="col-md-12">
            <div class="panel bg-white">
                <div class="breadcrumb-wrapper text-right">
                    <h4 class="no-margin">اوامر الاركاب المعتمدة</h4>
                </div>
                <div class="panel-body">
                    @using (Ajax.BeginForm("_GetTravelOrderApproved", new AjaxOptions { UpdateTargetId = "_GetTravelOrderApproved" }))
                    {

                    <div class="col-lg-3 col-lg-3 col-sm-12 col-xs-12">
                        <label>رقم أمر الإركاب </label>
                        @Html.DevExpress().SpinEdit(
                            settings =>
                            {
                                settings.Name = "TripNumber";
                                settings.Properties.NullText = "رقم أمر الإركاب";
                                settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.OnHover;
                            }).GetHtml()
                    </div>
                        <div class="col-lg-3 col-lg-3 col-sm-12 col-xs-12">
                            <label>رقم أمر الإرتباط</label>
                            @Html.DevExpress().SpinEdit(
                                settings =>
                                {
                                    settings.Name = "AgentRefNumber";
                                    settings.Properties.NullText = "رقم أمر الإرتباط";
                                    settings.Properties.ClearButton.DisplayMode = ClearButtonDisplayMode.OnHover;
                                }).GetHtml()

                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                            <label>من تاريخ اصدار امر الاركاب </label>
                            <div class="editor">
                                @Html.DevExpress().DateEdit(settings =>
                           {
                               settings.Name = "CreateDateFrom";
                               settings.Properties.NullText = "MM/dd/yyyy";
                               settings.Properties.EditFormat = EditFormat.Custom;
                               settings.Properties.EditFormatString = "MM/dd/yyyy";
                               settings.Width = Unit.Percentage(100);
                               settings.Properties.CalendarProperties.FastNavProperties.DisplayMode = FastNavigationDisplayMode.Inline;
                             
                               settings.Width = Unit.Percentage(100);
                           }).GetHtml()
                            </div>

                        </div>

                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 form-group">
                            <label>إلي تاريخ اصدار امر الاركاب</label>
                            <div class="editor">
                                @Html.DevExpress().DateEdit(settings =>
                           {
                               settings.Name = "CreateDateTo";
                               settings.Properties.NullText = "MM/dd/yyyy";
                               settings.Properties.EditFormat = EditFormat.Custom;
                               settings.Properties.EditFormatString = "MM/dd/yyyy";
                               settings.Width = Unit.Percentage(100);
                               settings.Properties.CalendarProperties.FastNavProperties.DisplayMode = FastNavigationDisplayMode.Inline;

                               settings.Width = Unit.Percentage(100);
                           }).GetHtml()
                            </div>

                        </div>

                        <div class="col-lg-3 col-lg-3 col-sm-12 col-xs-12">
                            @Html.DevExpress().Button(settings =>
                                 {
                                     settings.Name = "btnSearch";
                                     settings.ControlStyle.CssClass = "btn btn-primary";
                                     settings.Text = "بحث";
                                     settings.Images.Image.IconID = IconID.ActionsSearch16x16devav;
                                     settings.UseSubmitBehavior = true;
                                 }).GetHtml()
                        </div>

                        <div class="row">
                            <br />
                            <br />
                            <br />
                            <div class="dx-clearfix"></div>
                            <div id="_GetTravelOrderApproved">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>